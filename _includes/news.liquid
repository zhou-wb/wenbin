<div
  class="news js-news-pager"
  data-news-page-size="{{ site.announcements.limit | default: 5 }}"
  data-news-total="{{ site.news | size }}"
  {% if include.limit %}
    data-news-has-liquid-limit="true"
  {% else %}
    data-news-has-liquid-limit="false"
  {% endif %}
>
  {% if site.news != blank %}
    {% assign news_size = site.news | size %}
    <div
      class="table-responsive"
      {% if include.limit and site.announcements.scrollable and news_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign news = site.news | reverse %}
        {% if include.limit and site.announcements.limit %}
          {% assign news_limit = site.announcements.limit %}
        {% else %}
          {% assign news_limit = news_size %}
        {% endif %}
        {% for item in news limit: news_limit %}
          <tr class="news-item" data-news-index="{{ forloop.index0 }}">
            <th scope="row" style="width: 20%">{{ item.date | date: '%b %d, %Y' }}</th>
            <td>
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="news-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>

    <div class="news-pagination js-news-pagination" hidden>
      <button type="button" class="btn btn-sm btn-outline-secondary js-news-prev" aria-label="Previous news page">
        ← Prev
      </button>
      <span class="news-page-status js-news-status" aria-live="polite"></span>
      <button type="button" class="btn btn-sm btn-outline-secondary js-news-next" aria-label="Next news page">
        Next →
      </button>
    </div>
  {% else %}
    <p>No news so far...</p>
  {% endif %}
</div>
